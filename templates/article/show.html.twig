{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>By</th>
                <td>{{ article.user.nickname }}
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <div class = "table">
        {% for comment in comments %}
            <div> {{ comment.user.nickname }} a dit : </div>
            <div> {{ comment.content }} <div>
        {% endfor %}
    
       <a class ="my-4" href="{{ path('app_comment_new', {'id': article.id}) }}"> Ajouter un commentaire </a>
    </div> 

    <a class ="" href="{{ path('app_article_index') }}">back to list</a>


{% endblock %}
